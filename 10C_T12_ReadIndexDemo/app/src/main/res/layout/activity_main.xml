<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="afaya.a10c_t12_readindexdemo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DisConnected"
        android:layout_alignParentTop="true"
        android:textSize="48dp"
        android:id="@+id/textState"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect"
        android:textSize="48dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textState" />
    <Button
        android:id="@+id/getScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get screen"
        android:textSize="48dp"
        android:layout_below="@id/connectButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index:"
        android:id="@+id/textIndex"
        android:layout_below="@+id/textState"
        android:textSize="48dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBottom="@+id/textIndex"
        android:layout_below="@+id/textState"
        android:layout_alignEnd="@+id/textState"
        android:layout_toEndOf="@+id/textIndex" />


</RelativeLayout>
